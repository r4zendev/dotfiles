root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.go]
indent_style = tab
indent_size = 4

[*.rs]
indent_size = 4

[*.zig]
indent_size = 4

[*.fish]
indent_size = 4

[*.{ini,py,py.tpl,rst}]
indent_size = 4

[*.{c,h,cpp,hpp,cxx,hxx,cc,hh}]
indent_size = 4

[*.{md,mdx,diff}]
trim_trailing_whitespace = false

[*.{cmd,bat,ps1}]
end_of_line = crlf
