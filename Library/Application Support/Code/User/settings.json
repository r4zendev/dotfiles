{
  "customizeUI.activityBar": "bottom",
  "customizeUI.activityBarHideSettings": true,
  "customizeUI.statusBarPosition": "under-panel",
  "customizeUI.titleBar": "frameless",
  "editor.accessibilitySupport": "off",
  "editor.codeActionsOnSave": {
    "source.fixAll": false
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 18,
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.guides.bracketPairs": "active",
  "git.autofetch": true,
  "gitlens.blame.highlight.enabled": false,
  "gitlens.blame.toggleMode": "window",
  "redhat.telemetry.enabled": true,
  "terminal.external.osxExec": "Alarcitty.app",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "terminal.integrated.fontSize": 16,
  "transparent-win.transparency": 0.8,
  "window.nativeFullScreen": false,
  "window.titleBarStyle": "native",
  "window.zoomLevel": -1,

  "workbench.sideBar.location": "right",
  "workbench.colorCustomizations": {
    "statusBar.background": "#005f5f",
    "statusBar.debuggingBackground": "#005f5f",
    "statusBar.noFolderBackground": "#005f5f"
  },
  "workbench.colorTheme": "poimandres-noitalics",
  "workbench.iconTheme": "vscode-icons",
  "workbench.layoutControl.enabled": false,

  // Vim
  "vim.easymotion": true,
  "vim.enableNeovim": true,
  "vim.leader": " ",
  "vim.neovimPath": "/opt/homebrew/bin/nvim",
  "vim.statusBarColorControl": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindings": [
    {
      "before": ["<tab>"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<S-tab>"],
      "commands": ["workbench.action.previousEditor"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    },
    {
      "before": ["<C-u>"],
      "after": ["<C-u>", "z", "z"]
    },
    {
      "before": ["<C-d>"],
      "after": ["<C-d>", "z", "z"]
    }
  ]
}
