{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"baseUrl": ".",
		"allowJs": false,
		"checkJs": true,
		"module": "es2022",
		"target": "es2020",
		"lib": ["ES2024"],
		"moduleResolution": "bundler",
		"skipLibCheck": true,
		"types": ["./@types"],
		"strict": true,
		"jsx": "react-jsx",
		"jsxImportSource": "ags/gtk4",
		"paths": {
			"~/*": ["./src/*"]
		}
	}
}
