{
	"$schema": "https://www.schemastore.org/package.json",
	"name": "novashell",
	"version": "1.0.0",
	"packageManager": "pnpm@10.12.1",
	"scripts": {
		"types": "pnpx @ts-for-gir/cli generate --ignoreVersionConflicts",
		"clean": "rm -rf ./build",
		"build": "sh ./build.sh",
		"usage:lint": "usage lint ./nsh.usage.kdl && usage lint ./nsh-msg.usage.kdl",
		"usage:sync": "bash ./scripts/update-nsh-usage-artifacts.sh",
		"biome:check": "biome check --write --diagnostic-level=error .",
		"fixall": "pnpm biome:check",
		"lint": "biome lint --write --diagnostic-level=error .",
		"format": "biome format --write --diagnostic-level=error ."
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.14",
		"ags": "file:/usr/share/ags/js",
		"fuse.js": "^7.1.0"
	}
}
