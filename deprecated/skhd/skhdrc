# fast focus desktop
# alt - tab : yabai -m space --focus recent

# send window to monitor and follow focus
# shift + alt - n : yabai -m window --display next; yabai -m display --focus next
# shift + alt - p : yabai -m window --display previous; yabai -m display --focus previous

# window size
shift + alt - a : yabai -m window --resize right:-20:0 2> /dev/null || yabai -m window --resize left:-20:0 2> /dev/null
shift + alt - s : yabai -m window --resize bottom:0:20 2> /dev/null || yabai -m window --resize top:0:20 2> /dev/null
shift + alt - w : yabai -m window --resize bottom:0:-20 2> /dev/null || yabai -m window --resize top:0:-20 2> /dev/null
shift + alt - d : yabai -m window --resize right:20:0 2> /dev/null || yabai -m window --resize left:20:0 2> /dev/null
